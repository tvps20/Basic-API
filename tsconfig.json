{
    "compilerOptions":{
        "target": "es5",
        "module": "commonjs",
        "outDir": "./build",
        "lib": ["es2015"],
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },

    "include":[
        "server/**/*.ts",
        "server/*.ts"
    ],

    "exclude": [
        "node_modules"
    ],

    "ompileOnSave": true,
    "buildOnSave": true
}